<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import java.lang.String?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="CreateOrder"
      stylesheets="stylesheet.css"
      prefHeight="400.0" prefWidth="600.0">

    <VBox id="orderBox">

        <ComboBox fx:id="customerList" value="Select Customer">
            <items>
                <FXCollections fx:factory="observableArrayList">
                </FXCollections>
            </items>
        </ComboBox>

        <VBox id="spacing">
        </VBox>

        <ComboBox fx:id="operatorList" value="Select Operator">
            <items>
                <FXCollections fx:factory="observableArrayList">
                </FXCollections>
            </items>
        </ComboBox>

        <VBox id="spacing">
        </VBox>

        <TextArea promptText="Description" maxWidth="250" maxHeight="150" fx:id="desctiption" />

    </VBox>

    <VBox id="spacing">
    </VBox>

    <VBox id="buttonAlignment">
        <Button id="placeOrderButton" text="Place Order" onMouseClicked="#placeOrderButtonClicked"/>
        <VBox id="spacing">
        </VBox>
        <Button id="goBackButton" text="Go Back" onMouseClicked="#goBackButtonClicked"/>
    </VBox>


</VBox>
